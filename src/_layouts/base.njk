    />

    <link rel="stylesheet" href="/css/themes.css?v=1.0" />
    <link rel="stylesheet" href="/css/landing.css?v=1.0" />
    <link rel="stylesheet" href="/css/wordmark-dance.css?v=1.0" />
    <link rel="stylesheet" href="/css/background-layers.css?v=1.0" />
    <link rel="stylesheet" href="/css/style.css?v=1.0" />
    <link rel="stylesheet" href="/css/episode-list.css?v=1.0" />

  </head>
  <body class="{{ bodyClass }}">
    {{ content | safe }}

    <script src="/js/wordmark-sequence.js?v={{ meta }}"></script>
    <script src="/js/mobile-navigation.js?v={{ meta }}"></script>

  </body>
</html> 