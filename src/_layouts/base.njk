    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://neomania.net/" />
    <meta property="twitter:title" content="Neomania" />
    <meta property="twitter:description" content="Neomania Podcast" />
    <meta
      property="twitter:image"
      content="https://neomania.net/images/neomania-preview.png"
    />
    <meta property="twitter:creator" content="@robotson" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,slnt,wdth,wght,GRAD,XOPQ,XTRA,YOPQ,YTAS,YTDE,YTFI,YTLC,YTUC@8..144,-10..0,25..151,100..1000,-200..150,27..175,323..603,25..135,649..854,-305..-98,560..788,416..570,528..760&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
